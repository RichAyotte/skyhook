<?php
$locale = Localization::getLocale();
?>
<!-- Locale Settings -->
<div id="locale-settings" data-role="collapsible" data-collapsed="true">
	<h3>
		<?= $i18n->_('Localization Settings')?>
	</h3>
	<div id="locale-errors"></div>
	<div data-role="fieldcontain">
		<label for="locale">
			<?= $i18n->_('Localize for:')?>
		</label>
		<select
			name="locale"
			id="locale"
			data-theme="a"
			data-native-menu="false"
		>
		<?php
foreach(Localization::getAvailableLocales() as $v): ?>
			<option
				value="<?= $html->escape($v['locale_name']) ?>"
				<?php
if ($locale === $v['locale_name']): ?>
				selected="selected"
				<?php
endif; ?>
			>
				<?= $html->escape($v['label']) ?>
			</option>
		<?php
endforeach; ?>
		</select>
	</div>
</div><!-- /Locale -->
